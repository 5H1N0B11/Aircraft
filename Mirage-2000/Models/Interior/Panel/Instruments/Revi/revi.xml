<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>reviVertical.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>

    <!-- Objets transparents -->
    <object-name>verre1</object-name>
    <object-name>verre2</object-name>
    <object-name>verre3</object-name>
  </animation>

    <animation>
        <type>select</type>
        <object-name>verre3</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-left-main-bus</property>
                <value>0</value>
            </greater-than>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>verre3</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-left-main-bus</property>
                <value>0</value>
            </greater-than>
            <greater-than>
                <property>controls/avionics/HUD-brightness</property>
                <value>0</value>
            </greater-than>
        </condition>
    </animation>
    <effect>
        <inherits-from>hud</inherits-from>
        <object-name>verre3</object-name>
    </effect>
    <animation>
        <object-name>verre3</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/avionics/HUD-brightness</factor-prop>
            <red>  1</red>
            <green>1</green>
            <blue> 1</blue>
        </emission>
    </animation>

    <!--  REMBRANDT support for transparent objects-->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>verre1</object-name>
    <object-name>verre2</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <emission>
      <red>   0.13 </red>
      <green> 0.13 </green>
      <blue>  0.13 </blue>
    </emission>
  </animation>

</PropertyList>
