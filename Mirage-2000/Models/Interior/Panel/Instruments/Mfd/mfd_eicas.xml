<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>mfd_eicas.ac</path>

	<!-- *************Text*************** -->
	<model>
		<name>text3dEADI</name>
		<path>Aircraft/Mirage-2000/Models/Interior/Panel/Instruments/Mfd/mfd_3dtextEICAS.xml</path>
		<offsets>
			<x-m>-0.008</x-m>
			<y-m> 0.000</y-m>
			<z-m> 0.000</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
		<condition>
			<equals>
			<property>/instrumentation/mfd/modeR</property>
			<value>3</value>
			</equals>
		</condition>
	</model>

	<!-- EICAS -->
	<object-name>EICAS-ecran</object-name>
	<object-name>EICAS-n1</object-name>
	<object-name>EICAS-n2</object-name>
	<object-name>EICAS-itt</object-name>
	<object-name>EICAS-oil-temp</object-name>
	<object-name>EICAS-oil-psi</object-name>
	<object-name>EICAS-hyd-psi</object-name>
	<object-name>EICAS-ff-rep</object-name>
	<object-name>EICAS-ff-fond</object-name>
	<object-name>text3dEICAS</object-name>

	<animation>
		<type>material</type>
		<object-name>EICAS-ecran</object-name>
		<object-name>EICAS-n1</object-name>
		<object-name>EICAS-n2</object-name>
		<object-name>EICAS-itt</object-name>
		<object-name>EICAS-oil-temp</object-name>
		<object-name>EICAS-oil-psi</object-name>
		<object-name>EICAS-hyd-psi</object-name>
		<object-name>EICAS-ff-rep</object-name>
		<object-name>EICAS-ff-fond</object-name>
		<emission>
			<factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
			<red>   0.5 </red>
			<green> 0.5 </green>
			<blue>  0.5 </blue>
		</emission>
		<ambient>
			<factor-prop>instrumentation/mfd/dimm-r</factor-prop>
			<red>   1 </red>
			<green> 1 </green>
			<blue>  1 </blue>
		</ambient>
		<diffuse>
			<factor-prop>instrumentation/mfd/dimm-r</factor-prop>
			<red>   1 </red>
			<green> 1 </green>
			<blue>  1 </blue>
		</diffuse>
		<specular>
			<factor-prop>instrumentation/mfd/dimm-r</factor-prop>
			<red>   1 </red>
			<green> 1 </green>
			<blue>  1 </blue>
		</specular>
	</animation>

	<!-- N1 -->
	<animation>
		<name>N1</name>
		<type>rotate</type>
		<object-name>EICAS-n1</object-name>
		<property>engines/engine[0]/n1-actual</property>
		<interpolation>
			<entry><ind>  0</ind><dep>   0</dep></entry>
			<entry><ind>102</ind><dep>-246</dep></entry>
		</interpolation>
		<center>
			<x-m>0.0</x-m>
			<y-m>-0.04367</y-m>
			<z-m>0.03269</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- N2 -->
	<animation>
		<name>N2</name>
		<type>rotate</type>
		<object-name>EICAS-n2</object-name>
		<property>engines/engine[0]/n2-actual</property>
		<interpolation>
			<entry><ind>  0</ind><dep>   1</dep></entry>
			<entry><ind>100</ind><dep>-245</dep></entry>
			<entry><ind>105</ind><dep>-255</dep></entry>
		</interpolation>
		<center>
			<x-m>0.0</x-m>
			<y-m>-0.02048</y-m>
			<z-m>0.00119</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- ITT -->
	<animation>
		<name>ITT</name>
		<type>rotate</type>
		<object-name>EICAS-itt</object-name>
		<property>fdm/jsbsim/propulsion/engine[0]/EGT-C-dmd</property>
		<interpolation>
			<entry><ind>  0</ind><dep>   1</dep></entry>
			<entry><ind>800</ind><dep>-181</dep></entry>
			<entry><ind>850</ind><dep>-192</dep></entry>
		</interpolation>
		<center>
			<x-m>0.0</x-m>
			<y-m>-0.05167</y-m>
			<z-m>0.00126</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

