<?xml version="1.0" encoding="iso-8859-1"?>
<PropertyList>
  <path>Aircraft/Mirage-2000/Missiles/SCALP/SCALP.ac</path>

  <animation>
    <object-name>scalp</object-name>
    <object-name>scalp.wingL</object-name>
    <object-name>scalp.wingR</object-name>
    <enable-hot type="bool">false</enable-hot>
  </animation>


<!-- 
pour les tests :
- /scalp-pos-norm defini dans m2000-5B-set.xml
- clic sur ailes pour deplier/replier les ailes

TODO:
- deplacer la propriete /scalp-pos-norm
- animer le deploiement sur un evenement donne

-->

  <animation>
    <type>rotate</type>
    <object-name>scalp.wingL</object-name>
    <property>/scalp-pos-norm</property>
    <factor>-75</factor>
    <center>
      <x-m>.19</x-m>
      <y-m>-.2</y-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>scalp.wingR</object-name>
    <property>/scalp-pos-norm</property>
    <factor>75</factor>
    <center>
      <x-m>.19</x-m>
      <y-m>.2</y-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>scalp.wingR</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>interpolate("/scalp-pos-norm", 1, 2);</script>
      </binding>
    </action>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>scalp.wingL</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>interpolate("/scalp-pos-norm", 0, 2);</script>
      </binding>
    </action>
  </animation>



</PropertyList>
