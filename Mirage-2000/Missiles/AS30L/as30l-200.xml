<?xml version="1.0" encoding="iso-8859-1"?>
<PropertyList>
    
  <model>
    <name>as30l_200</name>
    <path>Aircraft/Mirage-2000/Missiles/AS30L/as30L.xml</path>
  </model>
    
  <animation>
    <object-name>as30l_200</object-name>
    <enable-hot type="bool">false</enable-hot>
  </animation>
  <animation>
    <type>select</type>
    <object-name>as30l_200</object-name>
    <condition>
        <property>payload/armament/as30l/flags/msl-id-200</property>
    </condition>
  </animation>
  
  
  <!-- ===================== Flammes ========================-->
  <model>
		<name>flammes_200</name>
		<path>AS30L_flamme.xml</path>
	</model>
	<animation>
      <type>select</type>
      <object-name>flammes_200</object-name>
      <condition>
           <property>payload/armament/as30l/flags/smoke-id-200</property>
     </condition>
  </animation>
  
  <animation>
    <object-name>flammes_200</object-name>
    <type>rotate</type>
    <offset-deg>45</offset-deg>
    <center>
      <x-m> 0   </x-m>
      <y-m> 0   </y-m>
      <z-m> 0   </z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
<!-- ===================== Smoke left ========================-->
  <model>
    <name>Smoke_as30l_200_1</name>
    <path>Aircraft/Mirage-2000/Missiles/FlamesAndSmoke/smoke.xml</path>
    <offsets>
      <x-m>1</x-m>
      <y-m>0</y-m>
      <z-m>1</z-m>
    </offsets>
  </model>
  <animation>
    <type>select</type>
    <object-name>Smoke_as30l_200_1</object-name>
    <condition>
        <property>payload/armament/as30l/flags/smoke-id-200</property>
    </condition>
  </animation>
  <animation>
    <object-name>Smoke_as30l_200_1</object-name>
    <type>rotate</type>
    <offset-deg>45</offset-deg>
    <center>
      <x-m> 0   </x-m>
      <y-m> 0   </y-m>
      <z-m> 0   </z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
 
<!-- ===================== Smoke Right ========================-->
    <model>
    <name>Smoke_as30l_200_2</name>
    <path>Aircraft/Mirage-2000/Missiles/FlamesAndSmoke/smoke.xml</path>
    <offsets>
      <x-m>1</x-m>
      <y-m>0</y-m>
      <z-m>-1</z-m>
    </offsets>
  </model>
  <animation>
    <type>select</type>
    <object-name>Smoke_as30l_200_2</object-name>
    <condition>
        <property>payload/armament/as30l/flags/smoke-id-200</property>
    </condition>
  </animation>
  <animation>
    <object-name>Smoke_as30l_200_2</object-name>
    <type>rotate</type>
    <offset-deg>45</offset-deg>
    <center>
      <x-m> 0   </x-m>
      <y-m> 0   </y-m>
      <z-m> 0   </z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  
 <!-- ===================== Explosion ========================--> 
  <model>
    <name>explosionFire_as30l_200</name>
    <path>Aircraft/Mirage-2000/Missiles/FlamesAndSmoke/explosionFire.xml</path>
  </model>
  <model>
    <name>explosionSmoke_as30l_200</name>
    <path>Aircraft/Mirage-2000/Missiles/FlamesAndSmoke/explosionSmoke.xml</path>
  </model>
  
    <animation>
    <type>select</type>
    <object-name>explosionFire_as30l_200</object-name>
    <object-name>explosionSmoke_as30l_200</object-name>
    <condition>
        <property>payload/armament/as30l/flags/explode-id-200</property>
    </condition>
  </animation>
  

</PropertyList>
