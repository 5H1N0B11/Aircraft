<?xml version="1.0" encoding="iso-8859-1"?>
<PropertyList>
  <model> 
    <name>flaminghot_Left</name>
		<path>Aircraft/Mirage-2000/Missiles/FlamesAndSmoke/combustion.xml</path>
		<offsets>
			<x-m>1.80</x-m>
			<y-m>0</y-m>
			<z-m>0.7</z-m>
		</offsets>
	</model>
  
  <animation>
    <object-name>flaminghot_Left</object-name>
    <type>rotate</type>
    <offset-deg>-7</offset-deg>
    <center>
      <x-m> 1.78</x-m>
      <y-m> 1   </y-m>
      <z-m> 0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  
  
  <animation>
      <type>scale</type>
      <object-name>flaminghot_Left</object-name>
      <x-offset>1.0</x-offset>
      <y-offset>0.20</y-offset>
      <z-offset>0.20</z-offset>
  </animation>
  
  <!-- Right  --> 
    <model> 
    <name>flaminghot_Right</name>
		<path>Aircraft/Mirage-2000/Missiles/FlamesAndSmoke/combustion.xml</path>
		<offsets>
			<x-m>1.80</x-m>
			<y-m>0</y-m>
			<z-m>-0.7</z-m>
		</offsets>
	</model>
  
  <animation>
    <object-name>flaminghot_Right</object-name>
    <type>rotate</type>
    <offset-deg>7</offset-deg>
    <center>
      <x-m> 1.78</x-m>
      <y-m> 1   </y-m>
      <z-m> 0   </z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
      <type>scale</type>
      <object-name>flaminghot_Right</object-name>
      <x-offset>1.0</x-offset>
      <y-offset>0.20</y-offset>
      <z-offset>0.20</z-offset>
  </animation>
  
  
</PropertyList>
